{
  "name": "ionic2-meteor-boilerplate",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "start": "npm-run-all prep --parallel watch:* meteor",
    "start:prod": "npm-run-all prep --parallel meteor:prod",
    "meteor": "meteor run --settings ../config/development/settings.json",
    "meteor:prod": "meteor run --production --settings ../config/development/settings.json",
    "clear": "meteor reset",
    "meteor:update": "meteor update --all-packages",
    "prep:ios-css": "node-sass --include-path node_modules/ionic-angular/themes --include-path node_modules/ionicons/dist/scss ../theme/app.ios.scss | postcss --local-plugins --use autoprefixer --output public/stylesheets/ios-bundle.css",
    "prep:md-css": "node-sass --include-path node_modules/ionic-angular/themes --include-path node_modules/ionicons/dist/scss ../theme/app.md.scss | postcss --local-plugins --use autoprefixer --output public/stylesheets/md-bundle.css",
    "prep:fonts": "copyfiles -f 'node_modules/ionic-angular/fonts/*.+(ttf||woff||woff2)' public/fonts/",
    "watch:css": "nodemon -w ../theme -e scss -x npm-run-all prep:ios-css prep:md-css",
    "prep": "mkdir -p public/stylesheets/ public/fonts/ && npm-run-all prep:* --parallel",
    "test": "meteor test --driver-package practicalmeteor:mocha",
    "test:ci": "meteor test --once --driver-package dispatch:mocha-phantomjs",
    "meteor:build": "meteor build --directory ../build/ --architecture os.linux.x86_64"
  },
  "devDependencies": {
    "@types/chai": "4.0.6",
    "@types/meteor": "1.4.12",
    "@types/mocha": "2.2.44",
    "@types/underscore": "^1.7.36",
    "autoprefixer": "7.1.6",
    "chai": "4.1.2",
    "chai-spies": "0.7.1",
    "copyfiles": "1.2.0",
    "meteor-typings": "^1.4.1",
    "nodemon": "1.12.1",
    "node-sass": "4.7.2",
    "npm-run-all": "4.1.2",
    "postcss-cli": "4.1.1",
    "typescript": "2.6.2"
  },
  "dependencies": {
    "@angular/animations": "^5.0.3",
    "@angular/common": "^5.0.3",
    "@angular/compiler": "^5.0.3",
    "@angular/compiler-cli": "^5.0.3",
    "@angular/core": "^5.0.3",
    "@angular/forms": "^5.0.3",
    "@angular/http": "^5.0.3",
    "@angular/platform-browser": "^5.0.3",
    "@angular/platform-browser-dynamic": "^5.0.3",
    "@angular/router": "^5.0.3",
    "@ionic-native/core": "4.4.2",
    "@ionic-native/splash-screen": "4.4.2",
    "@ionic-native/status-bar": "4.4.2",
    "@ionic/storage": "2.1.3",
    "@ngx-translate/core": "9.0.1",
    "@ngx-translate/http-loader": "^2.0.0",
    "angular2-meteor": "0.8.0",
    "babel-runtime": "^6.20.0",
    "bcrypt": "^1.0.3",
    "ionic-angular": "3.9.2",
    "ionicons": "3.0.0",
    "meteor-node-stubs": "~0.3.0",
    "meteor-rxjs": "^0.4.8",
    "rxjs": "^5.4.2",
    "zone.js": "^0.8.16"
  }
}
